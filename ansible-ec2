---
- name: creating ec2 instance
  hosts: localhost
  tasks:
        - name: creating Ec2 instance via Ansible
          amazon.aws.ec2_instance:
            name: k8s-master
            instance_type: t3.micro
            image_id: ami-0bdd88bd06d16ba03
            vpc_subnet_id: subnet-02bf04f55b8d57d95
            security_group: sg-0d5f82a0badbb0513
            key_name: devops-key
            region: us-east-1
            count: 1
            state: present

